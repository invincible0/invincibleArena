<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Blog</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/blog/new" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="title" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Body</label>
                <textarea rows="15" class="form-control" type="text" id="description" name="body"
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Blog</button>
            </div>
        </form>
        <a href="/blogs">All Blogs</a>
    </div>
</div>